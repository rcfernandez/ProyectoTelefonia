@model IEnumerable<ProyectoTelefonia.Piso>

@{
    ViewBag.Title = "Index";
}

<h2>Administracion de Pisos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>
                <span>Piso</span>
            </th>
            <th>
                <span>Sub-Areas</span>
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody class="buscar">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Numero == -1L)
                    {
                        <span>SS</span>
                    }
                    else if (item.Numero == 0L)
                    {
                        <span>PB</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Numero)
                    }
                </td>
                <td>
                    @foreach (var item2 in item.SubAreas)
                    {
                        var mostrar = "";
                        if (item2.Nombre == "(sin sub-area)")
                        {
                            mostrar = "none";
                        }

                        <p style="display: @mostrar">@item2.Nombre</p>
                    }
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil", @style = "font-size: 15px" })&nbsp;
                    @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-list", @style = "font-size: 15px" })&nbsp;
                    @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove", @style = "font-size: 15px" })&nbsp;
                </td>
            </tr>
        }

    </tbody>

</table>
